@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Products</h1>

<div class="card">
    <form id="frmFilters" class="card-body form-inline p-2 bg-light">
        <label>Category</label>
        <select class="form-control ml-sm-2" asp-items="Model.Categories" asp-for="CategoryId">
            <option value="">All</option>
        </select>
        <label class="ml-sm-3">Brand</label>
        <select class="form-control ml-sm-2" asp-items="Model.Brands" asp-for="BrandId">
            <option value="">All</option>
        </select>
    </form>
</div>

<div class="row mt-3">
    @foreach (var item in Model.Products)
    {
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card mb-4">
                <div class="mx-3 mt-3">
                    <img src="~/uploads/products/@item.PictureUri" class="card-img-top" alt="@item.Name" />
                </div>
                <div class="card-body">
                    <div class="product-title" title="@item.Name">@item.Name</div>
                    <div class="d-flex justify-content-between align-items-baseline">
                        <span class="font-weight-light">@item.PriceText</span>
                        <a href="#" class="btn btn-success">
                            <i class="fas fa-cart-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<h3>Pagination Info</h3>
TotalItems: @Model.PaginationInfo.TotalItems
<br />
CurrentPage: @Model.PaginationInfo.CurrentPage
<br />
ItemsPerPage: @Model.PaginationInfo.ItemsPerPage
<br />
ItemsOnPage: @Model.PaginationInfo.ItemsOnPage
<br />
TotalPages: @Model.PaginationInfo.TotalPages
<br />
HasPrevious: @Model.PaginationInfo.HasPrevious
<br />
HasNext: @Model.PaginationInfo.HasNext
<br />

@section Scripts {
    <script>
        $("form#frmFilters").change(function () {
            this.submit();
        });
    </script>
} 