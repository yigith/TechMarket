@using Web.Interfaces
@inject IBasketViewModelService _basketViewModelService
<ul class="navbar-nav">
    <li class="nav-item">
        <a asp-controller="Basket" asp-action="Index" class="nav-link position-relative" title="My Basket">
            <i class="fas fa-shopping-cart text-dark fa-lg"></i>
            <span class="badge badge-success nav-basket-items-count">
                @await _basketViewModelService.BasketItemsCountAsync()
            </span>
        </a>
    </li>
</ul>